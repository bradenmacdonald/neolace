{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test suite setup (create data fixtures)",
            "type": "shell",
            "command": "deno",
            "options": {
                "env": {
                    "ENV_TYPE": "test"
                }
            },
            "args": [
                "run",
                "--allow-net",
                "--allow-read",
                "--allow-env",
                "--allow-write",
                "neolace/scripts/test-setup.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run test suite",
            "type": "shell",
            "command": "deno",
            "options": {
                "env": {
                    "ENV_TYPE": "test"
                }
            },
            "args": [
                "test",
                "--allow-net",
                "--allow-env",
                "--allow-read"
            ],
            "problemMatcher": []
        },
        {
            "label": "üöÄ Run backend",
            "type": "shell",
            "command": "deno",
            "args": [
                "run",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "--watch",
                "neolace/rest-api/server.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run backend (without watch mode)",
            "type": "shell",
            "command": "deno",
            "args": [
                "run",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "neolace/rest-api/server.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "üóÑÔ∏è Run neolace database servers",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up"],
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "‚ôªÔ∏è Erase Database and create default sites",
            "type": "shell",
            "command": "deno",
            "args": [
                "run",
                "--allow-net",
                "--allow-read",
                "--allow-env",
                "neolace/scripts/reset-dev-data-create-default-sites.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "üîç Rebuild search index for all sites",
            "type": "shell",
            "command": "deno",
            "args": [
                "run",
                "--allow-net",
                "--allow-read",
                "--allow-env",
                "neolace/scripts/reindex-sites.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "üî• Fully reset/erase all data",
            "type": "shell",
            "command": "docker-compose",
            "args": ["down", "-v"],
            "problemMatcher": []
        },
        {
            "label": "‚è© Apply database migrations",
            "type": "shell",
            "command": "deno",
            "args": [
                "run",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "neolace/scripts/migrate.ts"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build backend container image (prod)",
            "type": "shell",
            "command": "docker",
            "args": ["build", "--pull", "-t", "neolace/neolace-app/backend:latest", "-f", "backend/Dockerfile", "."],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/.."
            }
        },
        {
            "label": "Run backend container image (prod) with local dev databases",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "-e",
                "ENV_TYPE=development",
                "-e",
                "neo4jUrl=bolt://host.docker.internal:7687",
                "-p",
                "5554:5554",
                "neolace/neolace-app/backend:latest"
            ],
            "problemMatcher": []
        }
    ]
}
