    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run neolace server",
            "request": "launch",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "env": {
                "ENV_TYPE": "development"
            },
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect",
                "--import-map=import_map.json",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "neolace/api/server.ts"
            ],
            "attachSimplePort": 9229,
            "console": "integratedTerminal"
        }
