{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "lib": ["ES2019"],
        "moduleResolution": "Node",
        "strict": true,
        "target": "ES2019",
        // Note that some of these typings are also manually imported in intern-tests.ts
        "typeRoots" : ["./node_modules/@types", "./typings"],
        "experimentalDecorators": true,
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules",
        "./typings"
    ]
}
