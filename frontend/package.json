{
  "name": "neolace-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "predev": "npm run compile:i18n",
    "dev": "next dev -p 5555",
    "build": "next build",
    "start": "next start -p 5555",
    "entrypoint-dev": "npm link /local-dependencies/technotes-mdt/ && npm install && npm run dev",
    "extract:i18n": "formatjs extract '{pages,components,sections}/**/*.{js,ts,tsx}' --format simple --out-file content/locales/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple content/locales content/compiled-locales",
    "i18n": "npm run extract:i18n && npm run compile:i18n"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.1",
    "keratin-authn": "1.3.2",
    "neolace-api": "file:../neolace-api/dist/",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-intl": "^5.20.10",
    "react-popper": "^2.2.5",
    "technotes-mdt": "git+https://gitlab.com/technotes.org/technotes-mdt.git#main"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.2.33",
    "@types/node": "15.12.5",
    "@types/react": "17.0.19",
    "autoprefixer": "10.3.3",
    "postcss": "8.3.6",
    "tailwindcss": "2.2.9",
    "typescript": "4.3.4"
  }
}
